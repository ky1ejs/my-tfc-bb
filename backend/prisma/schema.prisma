// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username String @unique
  latest_access_token String
  refresh_token String
  hashed_password String
  devices Device[]
  deliveries Delivery[]
  password_status PasswordStatus @default(VALID)
}

enum PasswordStatus {
  VALID
  INVALID
}

model Device {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  device_provided_id String @unique
  user User @relation(fields: [user_id], references: [id])
  user_id String @db.Uuid
  push_token PushToken?
}

enum TokenEnv {
  STAGING
  PRODUCTION
}

enum PushPlatform {
  IOS
  ANDROID
  WEB
}

model PushToken {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token String
  env TokenEnv
  platform PushPlatform
  device Device @relation(fields: [device_id], references: [id])
  device_id String @unique @db.Uuid
}

model Delivery {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tfc_id Int
  name String
  comment String
  date_received DateTime @db.Timestamptz
  user User @relation(fields: [user_id], references: [id])
  user_id String @db.Uuid
  collected_at DateTime? @db.Timestamptz
  @@unique([tfc_id, user_id])
}
